<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:orientation="vertical">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_round_white_transparent"
            android:layout_marginTop="7dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
        <ImageView
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:id="@+id/coverMyBooks" android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="15dp" app:srcCompat="@drawable/ic_launcher_background"
                android:contentDescription="@string/book_cover"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp" android:layout_marginBottom="15dp">
            <TextView
                    android:text="@string/textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/titleMyBooks"
                    android:paddingBottom="10dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="@string/last_borrower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/lastBorrowerMyBooks"
                        android:paddingBottom="10dp" android:layout_marginEnd="5dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/lastBorrowerMyBooksValue"
                        android:paddingBottom="10dp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="@string/borrowed_on"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/borrowedDateMyBooks"
                        android:paddingBottom="10dp" android:layout_marginEnd="5dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/borrowedDateMyBooksValue"
                        android:paddingBottom="10dp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="@string/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/statusMyBooks"
                        android:paddingBottom="10dp" android:layout_marginEnd="5dp"
                        android:paddingTop="2dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/statusMyBooksValue"
                        android:layout_marginEnd="5dp"
                        android:paddingBottom="10dp" android:paddingTop="2dp"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_alert"
                        android:id="@+id/alertICMyBooks" android:visibility="invisible"
                        android:contentDescription="@string/alert_icon"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>