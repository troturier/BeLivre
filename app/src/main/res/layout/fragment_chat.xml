<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              tools:context=".controllers.fragments.ChatFragment" android:orientation="vertical">
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/chatRV_main" tools:visibility="gone"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/phChatTab"
            android:layout_marginTop="150dp">
        <ImageView
                app:srcCompat="@drawable/ic_mail_outline"
                android:layout_width="match_parent"
                android:layout_height="130dp" android:id="@+id/imageViewChat"
                android:tint="@color/colorPrimary" android:contentDescription="@string/icon"/>
        <TextView
                android:text="@string/you_have_not_started_any_conversation_yet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvPlaceHolderChatTab"
                android:textAlignment="center"
                android:textSize="18sp" android:textStyle="bold" android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp" android:layout_marginTop="10dp"/>
    </LinearLayout>
</LinearLayout>